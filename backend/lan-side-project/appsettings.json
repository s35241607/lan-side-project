{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Username=postgres;Password=password;Database=postgres;"
  },
  "JwtSettings": {
    "SecretKey": "your-secret-key-here", // 用來簽名 JWT 的密鑰
    "Issuer": "your-app", // 發行者
    "Audience": "your-app-users", // 觀眾
    "AccessTokenExpirationMinutes": 30, // 訪問令牌的過期時間（分鐘）
    "RefreshTokenExpirationDays": 30 // 刷新令牌的過期時間（天數）
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.PostgreSQL" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Host=postgres;Port=5432;Username=postgres;Password=password;Database=postgres;",
          "tableName": "logs",
          "needAutoCreateTable": true
        }
      }
    ]
  }
}
